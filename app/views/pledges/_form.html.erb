<%= form_for ([@project, @pledge]) do |f|%>

  <% if f.object.errors.any? %>
    <div class="alert alert-error">
      <strong>Try again after fixing the following things:</strong><br/>
      <ul>
        <% f.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :amount %>
  $<%= f.number_field :amount %><br>
  <%= f.submit "Back This Project" %>
<% end %>